    <main>
      <section>
        <h1><%= blog.title %></h1>
        <div class="h1-divider"></div>
        <p class="intro"><%= blog.sections[0].description %></p>

        <% blog.sections.forEach(section => { %>
        <article>
          <h3><%= section.subheading %></h3>
          <p><%= section.description %></p>

          <img class="placeHolder_img" src="<%= blog.image %>" alt="" />
        </article>
        <% }); %>

        <div class="change">
          <a class="previous" href="#">&#8592; Previous</a>
          <a class="next" href="#">Next &rarr;</a>
        </div>

        <a href="#" class="top">Back to Top &#8593;</a>
      </section>
    </main>
